<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.firedevz.sistemadegestaofinanceira.activity.ActivityVendas">

    <Button
        android:layout_marginTop="100dp"
        android:id="@+id/btnEfectuarVendas"
        android:layout_width="306dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_efectuavendas"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="110dp" />

    <Button
        android:id="@+id/btnVendasPendentes"
        android:layout_width="306dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_vendaspendentes"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="183dp" />

    <Button
        android:id="@+id/btnHistoricoVendas"
        android:layout_width="306dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_historicodevendas"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="241dp" />

    <Button
        android:id="@+id/btnRequisicoes"
        android:layout_width="306dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_requisicoes"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="306dp" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/navigation" />
    </android.support.constraint.ConstraintLayout>

</LinearLayout>
